<body id="top">

    @Html.Partial("_HomeNavNew")

    <!-- HERO UNIT -->
    <div id="hero-unit" class="hero-unit hero-light hero-video" data-vide-bg="mp4: https://fr8.azureedge.net/Content/videos/motion_1920.mp4, webm: https://fr8.azureedge.net/Content/videos/motion.webm, ogv: https://fr8.azureedge.net/Content/videos/motion.ogv, poster: https://fr8.azureedge.net/Content/videos/motion_1920.jpg" data-vide-options="loop: true, posterType: jpg">
        <div class="hero-content text-center">
            <div id="slidecaption" class="slide-caption">
                <div class="hero-text">
                    <h2 class="hero-heading">The Open Cloud Integration Service</h2>
                    <p>Distributed. Extensible. Powerful. Open-Source.</p>
                </div>
            </div>
            <div class="hero-buttons">
                <a href="#about" id="btn-about" class="btn btn-danger btn-lg"><i class="fa fa-arrow-circle-o-down"></i> READ MORE</a>
                @if (Request.IsAuthenticated)
                {
                    <a href="/Welcome" id="btn-contact" class="btn btn-primary btn-lg"><i class="fa fa-arrow-circle-o-right"></i> TRY IT NOW</a>
                }
                else {
                    <a href="/Account/ProcessGuestUserMode" id="btn-contact" class="btn btn-primary btn-lg"><i class="fa fa-arrow-circle-o-right"></i> TRY IT NOW</a>
                }
            </div>

            <!-- Slides -->
            <div id="myCarousel" class="carousel slide hero-slides base-block-white" data-ride="carousel">
                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <div class="carousel-content">
                            <h3>“Our team uses Fr8 to generate mail merges using Salesforce and DocuSign.<br />It only takes a few seconds to automatically insert data into our complex DocuSign templates.<br /> Fr8 delivers huge time savings.”</h3>
                            <p><b>Akkadian – <i>Peter Smith, Chief Operating Officer</i></b></p>
                        </div>
                    </div>
                </div>
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                </ol>
            </div>
        </div>

        <div class="hero-bg-pattern">
            <div class="full-area"></div>
        </div>
        <span id="#inner" class="fa fa-arrow-down"></span>
