@model HubWeb.ViewModels.ForgotPasswordVM

@{
    ViewBag.Title = "Forgot Password Confirmation";
}

@Html.Partial("~/Views/Account/_HeaderPartial.cshtml")

<div class="registration-section  col-md-4 col-md-offset-3">
    <div class="wrapper">
        <h2 class="section-title with-border">Check your email</h2>
        <div class="row">
            <div class="col-md-12">
                <div class="custom-form">
                    <p>Reset password email sent to @Model.Email</p>
                    <p><b>Note:</b> Reset password link will be expired after 24 hours.</p>    
                </div>
            </div>
        </div>
    </div>
</div>

