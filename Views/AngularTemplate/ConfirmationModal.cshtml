<div class="modal-header">
    <h3 class="modal-title">{{message.title}}</h3>
</div>
<div class="modal-body">
    <div>
        <p ng-bind-html="message.body"></p>
    </div>
</div>
<div class="modal-footer">
    <button ng-show="message.isOkButtonVisible" class="btn btn-primary" type="button" ng-click="confirm()">Ok</button>
    <button ng-show="message.isOkCancelVisible" class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
</div>